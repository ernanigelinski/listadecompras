<p id="notice"><%= notice %></p>

<h1>Listing Shopping Lists</h1>

<table>
  <thead>
    <tr>
      <th>Item</th>
      <th>Bought</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shopping_lists.each do |shopping_list| %>
      <tr>
        <td><%= shopping_list.item %></td>
        <td><%= shopping_list.bought %></td>
        <td><%= link_to 'Show', item_shopping_list_path(@item) %></td>
        <td><%= link_to 'Edit', edit_item_shopping_list_path(@item, shopping_list) %></td>
        <td><%= link_to 'Destroy', shopping_list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

